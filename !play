-# $httpResult[message]]
$else
$if[$httpResult[position]==1]
$httpPost[http://vps-d58308d1.es.cloud.lucnodes.es:4402/API/play;{
    "token": "$getVar[TOKEN]",
    "bot_id": "$botID",
